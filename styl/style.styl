body 
	color blue
	font-family 'iowan-old-style'
	


	
.work
	margin-top 90px
	-webkit-column-count 2
	-moz-column-count 2
	column-count 2
	-webkit-column-gap 40px
	-moz-column-gap 40px
	column-gap 40px
	


	.work_container
		margin-bottom 30px
		position relative
		-webkit-column-break-inside avoid
		page-break-inside avoid
		break-inside avoid
		background $ll-grey
		transition all 0.5s ease
		&:hover
			.work_square img
				-webkit-transform scale(1.1)
				transform: scale(1.1)

		.bottom_square
			background white
		.work_square
			padding 76px 0
			padding-top 30px
			border-bottom 12px solid white
			transition all 0.5s ease
			img
				-webkit-transform scale(1)
				transform scale(1)
				ease-transition()
				remove-blur() 

		&:nth-child(1)
			height 400px
			// height 550px
			border none
			position relative
			font-size 1.4em
			line-height 1.2
			background white
			color $black
			h2
				color $black
				z-index 1
				padding-top 63px
				max-width 263px
				margin 0 auto
					
				&:before
					content ""
					width 260px
					height 260px
					border 2px solid $accent-color 
					position absolute
					bottom 10px
					left 50%
					z-index -1
					-webkit-transform translateX(-50%) rotate(44deg)
					-ms-transform translateX(-50%) rotate(44deg)
					transform: translateX(-50%) rotate(44deg)
				&:after
					content ""
					width 100px
					height 4px
					background $black
					position absolute
					bottom 0
					left 50%
					transform-center-x()



		img
			width 100%
			height 100%
		.bottom_square
			width 100%
			// height 160px
			padding 24px 30px 13px 29px
			border-top 4px solid $ll-grey
			position relative

			h2
				font-family 'iowan-old-style'
				font-style normal
				margin 9px 0
				text-transform uppercase
				color $black
				font-size 1.3em
				text-align left
			h3
				font-size 1em
				line-height 1.5
				color $black
				text-align left				

@media $mobile-only
	.work
		-webkit-column-count 1
		-moz-column-count 1
		column-count 1
		margin-top 0

@media $tablet-and-up
	.work
		&.no__snapping
			margin-top 230px
		

.content 
	float left
	width 65%
	margin-right 5%

.about 
	width 100%
	height 1010px
