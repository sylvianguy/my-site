			color $l-yellow
		:-moz-placeholder /* Firefox 18- */
			color $l-yellow
		::-moz-placeholder   /* Firefox 19+ */
			color $l-yellow
		:-ms-input-placeholder  
			color $l-yellow
		input[type=submit]
			width 82px
			height 41px
			border 1px solid $l-yellow
			position absolute
			right 0
			top 245px
			ease-transition()
			&:hover
				background rgba(225,225,225,0.2)
	h2
		padding-top 100px
		padding-bottom 10px
		&:after
			content ""
			width 100px
			height 3px
			background $accent-color
			position absolute
			bottom 0
			left 50%
			transform-center-x()
		
	p 
		position relative
		color $l-yellow
		max-width 560px
		margin 0 auto
		line-height 1.7
		padding-bottom 30px
		margin-bottom 35px

