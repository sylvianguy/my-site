			border 1px solid rgb(133,133,133)
			width 30%
			height 527px
			display inline-block
			vertical-align top
			text-align left
			position relative
			z-index 53
			ease-transition()
			&:hover
				box-shadow 0 2px 9px rgba(0,0,0,0.55)
