body 
	color blue
	font-family 'iowan-old-style'


	
.work
	margin-top 90px
	-webkit-column-count 2
	-moz-column-count 2
	column-count 2
	-webkit-column-gap 40px
	-moz-column-gap 40px
	column-gap 40px
	
	&.no__snapping
		margin-top 225px


	.work_container
		margin-bottom 30px
		position relative
		-webkit-column-break-inside avoid
		page-break-inside avoid
		break-inside avoid
		background $ll-grey
		transition all 0.5s ease
		&:hover
			.bottom_square
				background $l-yellow
			.work_square img
				-webkit-transform scale(1.1)
				transform: scale(1.1)

		
		.work_square
			padding 76px 0
			padding-top 30px
			border-bottom 4px solid white
			transition all 0.5s ease
			img
				-webkit-transform scale(1)
				transform scale(1)
				-webkit-transition all .3s ease
				transition all .3s ease
				-webkit-backface-visibility hidden 

		&:nth-child(1)
			height 400px
			border none
			position relative
			font-size 1.4em
			line-height 1.2
			background white
			color $black
			h2
				// font-family 'Playfair Display', serif			
				// font-style italic
				// text-align center
				// font-weight 400
				color $black
				position absolute
				top 50%
				left 50%
				transform translateX(-50%) translateY(-50%)
				&:before
					content ""
					width 260px
					height 260px
					border 2px solid $accent-color 
					position absolute
					bottom 10px
					right 14px
					z-index -1
					-webkit-transform rotate(44deg)
					-ms-transform rotate(44deg)
					transform: rotate(44deg)
				&:after
					content ""
					width 100px
					height 4px
					background $black
					position absolute
					bottom 0
					left 50%
					transform translateX(-50%)



		img
			width 100%
			height 100%
		.bottom_square
			width 100%
			height 160px
			padding 30px
			transition all 0.5s ease
			&:before
				content ""
				position absolute
				width 100%
				height 3px 
				background white
				top 0
				left 0
			h2
				font-family 'iowan-old-style'
				font-style normal
				margin 9px 0
				text-transform uppercase
				color $black
				font-size 1.3em
				text-align center
			h3
				font-size 1em
				line-height 1.5
				color $black
				padding 0px 21px

					

