.form_section
	width 100%			
	height 930px
	background geturl("/images/forest-large.jpg")
	background-attachment fixed
	background-position center center
	background-size cover
	position relative
	&:before
		content ""
		width 100%
		height 100%
		position absolute
		background rgba(0,0,0,0.75)
		top 0
		left 0
	form
		position relative
		margin-top 200px
		width 67%
		max-width 570px
